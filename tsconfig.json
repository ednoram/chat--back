{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": ".build",
    "baseUrl": ".",
    "paths": {
      "@utils": ["src/utils"],
      "@config": ["src/config"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "exclude": ["./node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
